# stop screen from going blank
xset s off
xset -dpms
xset s noblank
# Faster key repeat and delay
xset r rate 210 40

# Network Manager Applet
nm-applet --indicator &

# Environment variables set everywhere
export EDITOR="nvim"
export BROWSER="firefox"

# Compositor
picom -b

